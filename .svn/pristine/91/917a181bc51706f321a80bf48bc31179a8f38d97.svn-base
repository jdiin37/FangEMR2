							ajax_getOpList("OrRecordService","Date");	
						}
						

					} else {
						ajaxErrMsg = dataXray.errorMessage;
						hideLoading();
						noDataFound(ajaxErrMsg,"OpList");
					}
				
											

				});
	 
	    request.onreadystatechange = null;
		request.abort = null;
		request = null;
	
};




