@charset "UTF-8";

body{
	margin:5px; padding:0;
	font-family:helvetica,"微軟正黑體",sans-serif
	}
#tdCenter{

text-align:center;

}

.tr_odd{
background-color:#FEFEFE;
}

.tr_even{
background-color:#DDDDDD;
}

.tr_selected{
background-color:#9E7FDD;
color:#FFFFFF;

}

tbody >tr{
cursor:pointer;
}

.thGradient{
/**標頭漸層顏色 */
background: -webkit-linear-gradient(180deg,#A38EC9,#D7C4FB);
background: -o-linear-gradient(180deg,#A38EC9,#D7C4FB);
background: -moz-linear-gradient(180deg,#A38EC9,#D7C4FB);
background: linear-gradient(180deg,#A38EC9,#D7C4FB);
color: #402069;
font-weight:bold;
}

.panel > .panel-heading {
    background-image: none;
    background: -webkit-linear-gradient(180deg,#A38EC9,#D7C4FB);
    background: -o-linear-gradient(180deg,#A38EC9,#D7C4FB);
    background: -moz-linear-gradient(180deg,#A38EC9,#D7C4FB);
    background: linear-gradient(180deg,#A38EC9,#D7C4FB);
    color: #402069;
    font-weight:bold; 

}

.purple-outline{
border: 1px solid #CDC1D8;
}

.purple-outline-withCorner{
border: 2px solid #CDC1D8;
border-radius: 5px;
padding:5px;
	
	
}